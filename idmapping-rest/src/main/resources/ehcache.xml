<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.ehcache.org/v3"
	xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

	<cache alias="pirIDMappingCache">
		<key-type>java.lang.String</key-type>
		<value-type>org.uniprot.api.idmapping.model.IdMappingJob</value-type>
		<expiry>
			<!-- Entries in the cache should expire after the defined time. -->
			<ttl unit="seconds">1200</ttl>
		</expiry>
		<resources>
			<heap unit="MB">500</heap>
		</resources>
		<heap-store-settings>
			<max-object-graph-size>100000</max-object-graph-size>
		</heap-store-settings>
	</cache>
</config>